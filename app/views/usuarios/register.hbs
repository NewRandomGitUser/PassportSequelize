              <div class="form-group">
                <label for="email">Número</label>
                <input type="email" class="form-control" name="email" placeholder="(00)000000000" required autofocus>
              </div>
              <div class="form-group">
                <label for="password">Senha </label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit" value="Sign Up">Registrar</button>
              <br />
            </form>
