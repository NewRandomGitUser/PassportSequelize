          <div class="card-body">
            <h5 class="card-title text-center">Registrar</h5>
            <form id="register" name="register" method="post" action="/register">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="firstname">Nome</label>
                  <input type="text" class="form-control" name="firstname" required autofocus>
                </div>
                <div class="form-group col-md-6">
                  <label for="lastname">Sobrenome</label>
                  <input type="text" class="form-control" name="lastname" required autofocus>
                </div>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" required autofocus>
              </div>
